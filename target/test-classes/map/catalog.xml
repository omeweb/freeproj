<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

	<!-- 夏雷 -->
<sqlMap namespace="catalog">
	<typeAlias alias="Catalog" type="com.taobao.freeproj.domain.Catalog" />

	<!--
	2012-07-31 增加lastOperator、creator by liusan.dyf
	2012-08-31 增加reservedString by liusan.dyf
	-->
	<insert id="insert" parameterClass="Catalog">
		INSERT INTO $reservedField$
		(`title`,`code`,`parentId`,`parentPath`,`sortNumber`,`level`,`reservedInt`,`status`,`comment`,`creator`,`lastUpdateTime`,`lastOperator`,`reservedString`)
		VALUES
		(#title#,#code#,0, #parentPath#, #sortNumber#, #level#, #reservedInt#, #status#, #comment#,#creator#,now(),#lastOperator#,#reservedString#);
		
		<selectKey keyProperty="id" type="post" resultClass="int">
      		select LAST_INSERT_ID() as value
    	</selectKey>
	</insert>

	<delete id="delete" parameterClass="Catalog">
		DELETE FROM
		`$reservedField$` WHERE code like CONCAT(#code#,'%');
	</delete>

	<!--2012-04-10
	2012-07-31增加lastOperator by liusan.dyf
	-->
	<update id="update" parameterClass="Catalog">
		update `$reservedField$`
		set
		<dynamic>
			<isNotEmpty property="title">
	            `title` = #title# ,
			</isNotEmpty>
			<isNotEmpty property="comment">
	            `comment` = #comment# ,
			</isNotEmpty>
			
			<isNotEmpty property="lastOperator">
	            `lastOperator` = #lastOperator# ,
			</isNotEmpty>
			
			<isNotEmpty property="reservedString">
	            `reservedString` = #reservedString# ,
			</isNotEmpty>
			
			<!--2012-06-11 by liusan.dyf-->
			<isNotEmpty property="sortNumber">
	           <isNotEqual prepend="" property="sortNumber" compareValue="0">
					`sortNumber` = #sortNumber#,
				</isNotEqual>
			</isNotEmpty>
			
		</dynamic>
		`lastUpdateTime` = now()
		where code=#code#;
	</update>
	
	<!--2012-07-11 by liusan.dyf
	当把from节点移动到to节点，首先，from的code要先附加to的code，然后再加上自己的（from）后#leveledLength#位。
	from的parentpath，其实就是舍弃掉更新了的code的最后leveledLength位
	
	reservedString先不动
	-->
	<update id="move"  parameterClass="hashmap">
		UPDATE `$reservedField$` SET `code` = CONCAT(#to#, SUBSTRING(`code`,LENGTH(#from#)-#leveledLength# + 1)) ,
		`parentPath` =  CONCAT(#to#, SUBSTRING(`code`,0,LENGTH(#from#)-#leveledLength# + 1- #leveledLength#))  
		WHERE `code` LIKE CONCAT(#from#,'%');
	</update>

	<select id="getOne" resultClass="Catalog" parameterClass="hashmap">
		SELECT * FROM `$reservedField$` where code = #code# ;
	</select>
	
	<!--2012-03-08 判断同级目录是否有重复的-->
	<select id="checkUniquenessOfTheSiblingTitle" resultClass="int" parameterClass="hashmap">
		SELECT count(0) FROM `$reservedField$` where
		
		<dynamic>
			<isNotEmpty property="parentCode">
					code like CONCAT(#parentCode#,'%') and
			</isNotEmpty>
			
			<isNotEmpty property="exCode">
               	 	code != #exCode# and
			</isNotEmpty>
		</dynamic>
		
		 `level`=#level# and title = #title#;
	</select>
	
	<!--2012-07-31 by liusan.dyf-->
	<sql id="sql_getList"> 
        SELECT * FROM `$reservedField$`  where 1=1
		<dynamic>
			<isNotEmpty property="code">
					and code like CONCAT(#code#,'%')
			</isNotEmpty>
			<isGreaterThan prepend="" property="level" compareValue="0">
					and  `level` = #level#
			</isGreaterThan>
		</dynamic>
    </sql>

	<!--2012-06-11修改了排序规则-->
	<select id="getList" resultClass="Catalog" parameterClass="hashmap">
		<include refid="sql_getList"/>
		order by `parentPath`,`sortNumber`;
	</select>
	
	<!--2012-07-31 by liusan.dyf，按照最后更新时间排序-->
	<select id="getList_order_by_update_time" resultClass="Catalog" parameterClass="hashmap">
		<include refid="sql_getList"/>
		order by `lastUpdateTime`;
	</select>
	
</sqlMap>