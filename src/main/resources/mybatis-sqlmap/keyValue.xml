<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<mapper namespace="keyValue">
   	<!--2012-04-10 by liusan.dyf，仅仅获取key列表-->
   	<select id="getKeysByTypeCode" resultType="String" parameterType="hashmap">
 		SELECT `key_` as `key` FROM ${reservedValue} where typeCode=#{typeCode} and status>=0  		
 			<if test="orderBy != null">
 				order by ${orderBy} desc
 			</if> 		
 		;
	</select>
	
	<!--2015-4-20 20:06:29 by 六三-->
	<sql id="columns">
		id,`key_` as `key`, 			
		`value`,
		`typeCode`,`comment`,`status`,`lastUpdateTime`,`creator`,`lastOperator`,`reservedString`,`reservedInt`,`sortNumber`
	</sql>
	
   	<!--这里只拉取正常的kv-->
	<select id="getListByTypeCode" resultType="KeyValue" parameterType="hashmap">
 		SELECT <include refid="columns" /> FROM ${reservedValue} where typeCode=#{typeCode} and status>=0 		
 			<if test="orderBy != null">
 				order by ${orderBy} desc
 			</if> 		
 		;
	</select>
	
	<!--2012-03-31 去掉status限制条件-->
	<select id="getOne" resultType="KeyValue" parameterType="hashmap">
 		SELECT <include refid="columns" /> FROM ${reservedValue} where typeCode=#{typeCode} and `key_`=#{key} limit 1;
	</select>

	<!--2014-11-17 by 六三-->
	<select id="getById" resultType="KeyValue" parameterType="hashmap">
 		SELECT <include refid="columns" /> FROM ${reservedValue} where id=#{id};
	</select>
	
	<!--2011-11-08 value也要求可以模糊查询，强制使用typeCode
	2012-09-28增加reservedString、reservedInt
	2012-11-23增加key_pattern，匹配模式自定义
	-->
	<sql id="queryWhereClause">
		typeCode=#{typeCode} 
		
			<if test="keyword != null">
 				and (`key_` like CONCAT('%',#{keyword},'%') or `value` like CONCAT('%',#{keyword},'%'))
 			</if>
			
			<if test="key != null and key != ''">
 				and `key_` like CONCAT(#{key},'%')
 			</if>
			
			<if test="key_pattern != null">
 				and `key_` like CONCAT(#{key_pattern})
 			</if>
		
 			<if test="comment != null and comment != ''">
 				and `comment` like CONCAT('%',#{comment},'%')
 			</if>
			
			<if test="creator != null and creator != ''">
 				and `creator` = #{creator}
 			</if>
			
			<if test="lastOperator != null">
 				and `lastOperator` = #{lastOperator}
 			</if>
			
			<if test="reservedString != null">
 				and `reservedString` = #{reservedString}
 			</if>
			
			<if test="reservedInt != null">
 				and `reservedInt` = #{reservedInt}
 			</if>
			
			<!--2013-12-05，最后更新时间早于xxx by liusan.dyf-->
			<if test="minLastUpdateTime != null">
				and `lastUpdateTime` &gt; #{minLastUpdateTime}
			</if>
			
			<if test="maxLastUpdateTime != null">
				and `lastUpdateTime` &lt; #{maxLastUpdateTime}
			</if>
	</sql>
	
	<!--2011-11-07 14:51 by 63
	2012-04-16 追加 dynamic的orderBy by liusan.dyf
	2012-09-26 增加 noValue by liusan.dyf
	2012-09-27 增加`creator`,`lastOperator`
	2014-11-17 orderBy有白名单控制 by 六三
	-->
	<select id="getPagedList" resultType="KeyValue" parameterType="hashmap">
 		SELECT id,`key_` as `key`,
 			<if test="noValue != null">
 				null as 
 			</if>
		`value`,
		`typeCode`,`comment`,`status`,`lastUpdateTime`,`creator`,`lastOperator`,`reservedString`,`reservedInt`,`sortNumber`
		FROM ${reservedValue} where 
 		<include refid="queryWhereClause" />

 			<if test="orderBy != null">
 				order by ${orderBy} desc
 			</if>

		limit #{skip},#{limit};
	</select>
	
	<!--2011-11-07 15:13 by 63 和getPagedList一起使用-->
	<select id="getCount" resultType="int" parameterType="hashmap">
 		SELECT count(0) FROM ${reservedValue} where <include refid="queryWhereClause" />;
	</select>
	
	<!--2012-03-31 by 63
	2012-10-15 by liusan.dyf 增加key的dynamic属性
	2014-11-17 增加limit by 六三
	-->
	<delete id="delete" parameterType="hashmap">
 		delete FROM ${reservedValue} WHERE typeCode=#{typeCode} 
 			<if test="key != null">
 				and `key_` = #{key} limit 1
 			</if>
		;
	</delete>
	
	<!--2012-05-25 by 63
	2012-05-25 注意，不包括 set
	2012-09-27 增加lastOperator by liusan.dyf
	2012-09-28增加reservedString、reservedInt
	-->
	<sql id="updateClause">		
			<if test="status != 9527">
					`status` = #{status},
			</if>

			<!-- 2014-11-17 by 六三 -->
			<if test="sortNumber != 9527">
					`sortNumber` = #{sortNumber},
			</if>
						
			<if test="value != null">
				`value` = #{value},
			</if>
			
			<if test="comment != null">
				`comment` = #{comment},
			</if>
			
			<if test="lastOperator != null">
				`lastOperator` = #{lastOperator},
			</if>
			
			<if test="reservedString != null">
				`reservedString` = #{reservedString},
			</if>
			
			<if test="reservedInt != null">
				`reservedInt` = #{reservedInt},
			</if>
		lastUpdateTime=now()
	</sql>
 	
	<!--2012-03-31
	2014-11-17 增加limit by 六三
	-->
	<update id="update" parameterType="KeyValue">
		update ${reservedValue} set 
		<include refid="updateClause"/>
		WHERE typeCode=#{typeCode} and `key_` = #{key} limit 1;
	</update>
	
	<!--2012-05-26 by liusan.dyf 后面要接update分句
	2012-09-26增加creator,lastOperator
	2012-09-28增加reservedString、reservedInt
	-->
	<sql id="insertIgnoreClause">
		INSERT ignore INTO ${reservedValue} (`key_`,`value`,`typeCode`,`comment`,`status`,`lastUpdateTime`,`creator`,`lastOperator`,`createTime`,reservedString,reservedInt,sortNumber) 
		VALUES(#{key},#{value},#{typeCode},#{comment},#{status},now(),#{creator},#{creator},now(),#{reservedString},#{reservedInt},#{sortNumber})
		ON DUPLICATE KEY UPDATE
	</sql>

	<!--插入失败，原因未知2011-11-04  因为 默认没有开启事务提交 2011-11-05 
	2012-04-06 增加 ignore
	2012-04-12 如果没有selectKey，则mapper.insert的返回值为null
	2012-04-13 selectKey的keyProperty一定要是parameterType类型的一个属性
	-->
	<insert id="insert" parameterType="KeyValue">
 		<include refid="insertIgnoreClause"/>
		<include refid="updateClause"/>
		;
 		<!--<selectKey resultType="int" keyProperty="id" >
	      SELECT row_count() AS ID
	  </selectKey> -->
	</insert>
	
	<!--2012-05-26 by liusan.dyf
	从client批量提交KV，无法完整序列化为Collection<KeyValue>，只能是Collection<Map>结构
	-->
	<insert id="insert_" parameterType="hashmap">
 		<include refid="insertIgnoreClause"/>
		<include refid="updateClause"/>
		;
	</insert>
    
</mapper>
